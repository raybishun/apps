@model IEnumerable<Dividends.Models.Dividend>

@{
    ViewBag.Title = "List";
}

<h2>Search</h2>

@using (Html.BeginForm("List", "Dividends", FormMethod.Get))
{
    <div>
        @Html.Label("name", "Company Name")
    </div>
    <div>
        @Html.TextBox("name")
        <input type="submit" value="Submit">
    </div>
}

<p>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Symbol)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sector)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MarketCap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DividendYield)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PERatio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DividendGrowthStreak)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UninterruptedDividendStreak)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentFrequency)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sector)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarketCap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DividendYield)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PERatio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DividendGrowthStreak)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UninterruptedDividendStreak)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentFrequency)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
